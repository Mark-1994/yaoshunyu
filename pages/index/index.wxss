.yaoshunyu-banner {
  width: 100%;
  height: 300rpx;
}

.yaoshunyu-item {
  display: flex;
  padding: 10rpx;
  height: 120rpx;
}

.yaoshunyu-item-left {
  flex: 1;
  text-align: center;
}

.yaoshunyu-item-middle {
  flex: 3;
}

.yaoshunyu-item-right {
  flex: 1;
}

.yaoshunyu-item-left image {
  width: 120rpx;
  height: 120rpx;
}

.yaoshunyu-item-right {
  text-align: center;
}

.yaoshunyu-item-right image {
  width: 120rpx;
  height: 120rpx;
}